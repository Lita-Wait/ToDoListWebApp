﻿@using ToDoList.Domain.Enum
@model TaskEntity
@{
    ViewData["Title"] = "Задачи";
}

<style>
    .input-validation-error{
        border-color: red;
    }
</style>

<h4 class="mb-3 text-muted">Создание задачи</h4>
<form asp-controller="Task" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Priority" class="form-label"></label>
        <select asp-for="Priority" class="form-select mb-3" asp-items="Html.GetEnumSelectList<Priority>()"></select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" value="send" id="createTask" class="btn btn-primary">Создать</button>
</form>
